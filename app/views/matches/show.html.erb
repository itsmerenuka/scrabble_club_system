<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @match.title %>
</p>

<p>
  <strong>Details:</strong>
  <%= @match.details %>
</p>

<p>
  <strong>Participants details:</strong>
</p>

<p>
  <strong>Player 1:</strong>
</p> 
<p>
  <strong>Name :</strong>
  <%= @match.participants.first.member.first_name %>
</p>

<p>
  <strong>Score:</strong>
  <%= @match.participants.first.score %>
</p>

<p>
  <strong>Player 2:</strong>
</p> 
<p>
  <strong>Name :</strong>
  <%= @match.participants.second.member.first_name %>
</p>

<p>
  <strong>Score:</strong>
  <%= @match.participants.second.score %>
</p>

